{
  "id": "callosum",
  "name": "Callosum Protocol",
  "description": "Consistency enforcement for multi-agent coordination. Supports local and remote (cross-VM) modes.",
  "version": "0.2.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "mode": {
        "type": "string",
        "enum": [
          "local",
          "remote"
        ],
        "default": "local",
        "description": "local for file-based, remote for shared HTTP server"
      },
      "serverUrl": {
        "type": "string",
        "description": "Callosum server URL for remote mode"
      },
      "stateDir": {
        "type": "string",
        "description": "Directory for local state files (journal, locks, contexts)"
      },
      "lockExpiryMs": {
        "type": "number",
        "description": "Lock auto-expiry in milliseconds",
        "default": 300000
      },
      "instanceId": {
        "type": "string",
        "description": "This agent's instance identifier (e.g., 'mira', 'doug')"
      },
      "timeoutMs": {
        "type": "number",
        "description": "HTTP timeout for remote calls (ms)",
        "default": 5000
      }
    }
  }
}